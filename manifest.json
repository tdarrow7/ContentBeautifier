{
    "manifest_version": 2,
    "name": "Content Beautifier",
    "description": "Selects and simplifies content",
    "version": "1.0.0",
    "icons": {
        "128": "icon_128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "highlighter.css"
            ],
            "js": [
                "highlighter.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab"
    ]
}