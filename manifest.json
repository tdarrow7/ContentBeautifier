{
    "manifest_version": 2,
    "name": "Content Beautifier",
    "description": "Selects and simplifies content",
    "version": "1.0.0",
    "icons": {
        "128": "images/icon_128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "css/highlighter.css"
            ],
            "js": [
                "js/main.js",
                "js/highlighter.js",
                "js/jsBeautifyV2.js",
                "js/download.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "storage"
    ]
}